##############################################################
#                   eLearning CUTM - .env                    #
#         Configurație completă pentru mediu local           #
##############################################################

###########################
# Aplicație generală
###########################
APP_NAME=eLearning CUTM
APP_DESCRIPTION=Platformă educațională online CUTM
APP_VERSION=1.0.0
NODE_ENV=development           # development | production | staging
PORT=5000
HOST=localhost
BASE_URL=http://localhost:5000

###########################
# JWT Autentificare
###########################
SECRET_KEY=DevJWT_TraianBoboc_2025@CUTM!
JWT_EXPIRES_IN=2h
AUTH_COOKIE_NAME=elearning_auth_token

###########################
# Bază de date (MongoDB)
###########################
MONGO_URI=mongodb://127.0.0.1:27017/eLearningCUTM
DB_NAME=eLearningCUTM
DB_USER=                        # dacă MongoDB este securizat
DB_PASS=

###########################
# Rate limiting (anti-abuz)
###########################
RATE_LIMIT_WINDOW_MS=900000         # 15 minute
RATE_LIMIT_MAX_REQUESTS=100         # max 100 cereri în 15 min

###########################
# Email / SMTP
###########################
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false                  # true dacă folosești portul 465
EMAIL_USER=elearning.cutmmail@gmail.com
EMAIL_PASS=super_secure_password
EMAIL_FROM="eLearning CUTM <noreply@elearningcutm.md>"
EMAIL_SUPPORT=help@elearningcutm.md
RESET_PASSWORD_TOKEN_EXPIRY=10m

###########################
# Notificări (ex: Firebase, OneSignal)
###########################
NOTIFICATION_ENABLED=false
ONESIGNAL_APP_ID=
ONESIGNAL_API_KEY=

###########################
# Autentificare Socială (OAuth)
###########################
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:5000/auth/facebook/callback

###########################
# Upload fișiere (imagini, documente)
###########################
UPLOAD_DIR=uploads/
MAX_FILE_SIZE=10MB

###########################
# Securitate
###########################
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
CSRF_PROTECTION=true
X_FRAME_OPTIONS=DENY
CONTENT_SECURITY_POLICY=default-src 'self';

###########################
# Logare / Erori
###########################
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_FILE_PATH=logs/app.log

###########################
# Alte setări custom
###########################
ENABLE_REGISTRATION=true
ALLOW_GUEST_ACCESS=false
DEFAULT_LANGUAGE=ro
SUPPORT_PHONE=+373-681-055-43
